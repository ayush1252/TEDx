<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:id="@+id/Web"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wwwimg"
            android:src="@drawable/wwwcolor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:text="Website"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/wwwimg"
            android:layout_alignBottom="@+id/wwwimg"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:id="@+id/Fac"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/faceimg"

            android:src="@drawable/facecolor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:gravity="bottom"
            android:textColor="@color/colorAccent"
            android:text="Facebook"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/faceimg"
            android:layout_alignBottom="@+id/faceimg"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:id="@+id/Twit"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twitimg"
            android:src="@drawable/twittercolor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text3"
            android:textColor="@color/colorAccent"

            android:text="Twitter"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/twitimg"
            android:layout_alignBottom="@+id/twitimg"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:id="@+id/Inst"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/instaimg"
            android:src="@drawable/instacolor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text7"
            android:textColor="@color/colorAccent"

            android:text="Instagram"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/instaimg"
            android:layout_alignBottom="@+id/instaimg"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:id="@+id/Link"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linkimg"

            android:src="@drawable/linkedcolor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text4"
            android:text="LinkedIn"
            android:textColor="@color/colorAccent"

            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/linkimg"
            android:layout_alignBottom="@+id/linkimg"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/black" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:id="@+id/Snap"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/snapimg"
            android:src="@drawable/snapcolor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text5"
            android:textColor="@color/colorAccent"

            android:text="Snapchat"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/snapimg"
            android:layout_alignBottom="@+id/snapimg"
            />

    </RelativeLayout>

</LinearLayout>