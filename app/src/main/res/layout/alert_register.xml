<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/regnow"
        android:src="@drawable/re"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regnow"
        android:text="Registrations Open"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/text1"
        android:textStyle="bold"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="4dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginLeft="18dp"
        android:text="Visit the Profile section of the application to register and be a part of TEDxDTU 2017"/>


</RelativeLayout>