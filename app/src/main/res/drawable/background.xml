<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/lala"/>
    <item>
        <bitmap android:src="@drawable/theme5" android:gravity="center" android:alpha="0.1"/>
    </item>

    <item android:top="250dp"
        android:bottom="-250dp"
        android:left="0dp"
        android:right="-250dp">
        <rotate
            android:fromDegrees="-10"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/windowBackground"/>
            </shape>
        </rotate>
    </item>
</layer-list>